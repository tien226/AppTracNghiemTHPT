<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardBackgroundColor="@color/greenLight"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:paddingLeft="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium"
        android:paddingTop="@dimen/margin_medium"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/notification"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:contentDescription="@string/end_quiz"
            android:src="@drawable/ic_exit_app"
            android:layout_gravity="center"
            android:layout_width="86dp"
            android:layout_height="86dp" />
        <TextView
            android:textStyle="italic"
            android:id="@+id/tvDlNotifyMessage"
            tools:text="Vẫn còn 30/40 câu hỏi chưa trả lời.\nBạn có muốn thoát?"
            android:textSize="@dimen/text_size_data"
            android:textColor="@color/red"
            android:lineSpacingExtra="@dimen/line_spacing_extra"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/greenDark"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnDlNotifyEnd"
                android:text="@string/end_quiz"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_title"
                android:textAllCaps="false"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/greenDark"
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/btnDlNotifyReturn"
                android:text="@string/btn_return"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_title"
                android:textAllCaps="false"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>